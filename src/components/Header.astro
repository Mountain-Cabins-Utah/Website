---
import Nav, { routes } from "../components/Nav.astro";

export interface Props {
  currentPath: routes;
}

const { currentPath } = Astro.props;
---

<div class="header">
  <div class="wrapper">
    <Nav currentPath={currentPath} />
    <h1>Plan your perfect <br /> mountain vacation</h1>
    <p>
      Book Luxury Cabins In Northern Utah
      <br />
      Ski-In/Ski-Out Condos In Southern Utah
    </p>

    <svg
      width="121"
      height="1"
      viewBox="0 0 121 1"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <line x1="0.5" y1="0.5" x2="120.5" y2="0.5" stroke="#F4F9F4"></line>
    </svg>
    <a href="/cabins/" class="btn button-light">BOOK YOUR STAY</a>
    <form class="search" action="/cabins/">
      <input type="text" name="term" placeholder="South, Utah" />
      <select name="price">
        <option value="">Sort by Price</option>
        <option value="asc">Low to High</option>
        <option value="desc">High to Low</option>
      </select>
      <select name="location">
        <option value="">Filter by Location</option>
        <option value="north">Sundance (North)</option>
        <option value="south">Beaver (South)</option>
      </select>
      <input type="submit" class="btn btn-search" value="Search" />
    </form>
  </div>
</div>

<style>
  p {
    text-align: center;
  }

  .btn-search {
    background-color: var(--brown);
    color: var(--light);
  }

  input:focus {
    color: var(--brown);
  }

  input[type="submit"]:active,
  input[type="submit"]:focus {
    color: var(--light);
  }

  .btn-search:hover {
    background-color: var(--text-heading);
  }

  .header {
    position: relative;
    width: 100%;
    background-image: url("/img/hero.png");
    background-repeat: no-repeat;
    background-size: cover;
    height: 560px;
    color: var(--light);
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    height: 100%;
  }

  .header h1 {
    color: var(--light);
  }

  .header .search {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 16px 24px;
    gap: 24px;
    background: var(--primary-50);
    box-shadow: var(--shadow);
    border-radius: 16px;
    position: absolute;
    bottom: -30px;
    z-index: 999;
  }

  /* RESPONSIVE */
  @media only screen and (max-width: 768px) {
    .header .search {
      width: 100%;
      justify-content: space-between;
      border-radius: 0px;
    }

    input[type="text"] {
      width: 100%;
      min-width: none;
    }

    .decorative-hero {
      font-size: 48px;
      line-height: 52px;
    }
  }
  @media only screen and (max-width: 600px) {
    .header .search {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 16px 24px;
      gap: 8px;
      border-radius: 8px;
      bottom: -90px;
      width: fit-content;
    }

    input[type="text"],
    select {
      min-width: 300px;
      width: 100%;
    }

    .decorative-hero {
      width: 360px;
      font-size: 36px;
      line-height: 36px;
    }

    .search .btn-search {
      width: 100%;
    }
  }

  @media only screen and (max-width: 400px) {
    input[type="text"],
    select {
      min-width: 200px;
      width: 100%;
    }

    .header {
      gap: 24px;
    }

    input[type="date"] {
      width: 120px;
    }

    h1 {
      font-size: 32px;
    }
  }
</style>
