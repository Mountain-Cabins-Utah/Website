---
import Map from "../components/Map.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import SundanceAndEaglePoint from "../components/SundanceAndEaglePoint.astro";
import Host from "../components/Host.astro";
import Cabins from "../components/Cabins.astro";
import Charity from "../components/Charity.astro";
import Footer from "../components/Footer.astro";

const title =
  "Mountain Cabins Utah vacation rentals - Sundance, UT & Eagle Point Ski Resort";
---

<BaseLayout title={title}>
  <Header currentPath="/" />
  <SundanceAndEaglePoint />
  <Charity />
  <Cabins />
  <Host />
  <Map />
  <Footer />
</BaseLayout>
