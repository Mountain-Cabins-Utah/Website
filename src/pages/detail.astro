---
import HeaderDetail from "../components/cabinDetail/HeaderDetail.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Question from "../components/cabinDetail/Question.astro";
import Cabins from "../components/cabinDetail/Cabins.astro";
import Detail from "../components/cabinDetail/Detail.astro";

const title =
  "Mountain Cabins Utah vacation rentals - Sundance, UT & Eagle Point Ski Resort";
---

